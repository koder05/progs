<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:RF.WinApp;assembly=RF.WinApp.Infrastructure"
                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RF.WinApp.Themes.T1;component/Themes/generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <s:Double x:Key="GlobalFontSize">10</s:Double>

    <Style TargetType="{x:Type Border}" x:Key="DropDownPopupBorder">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1,1,1,1"/>
        <Setter Property="Padding" Value="1,0,1,0" />
    </Style>

</ResourceDictionary>